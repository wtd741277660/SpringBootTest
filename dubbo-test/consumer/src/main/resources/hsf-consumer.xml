<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:hsf="http://www.taobao.com/hsf"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context" 
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context  
       http://www.springframework.org/schema/context/spring-context-4.0.xsd  
       http://www.taobao.com/hsf
       http://www.taobao.com/hsf/hsf.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd"
        default-autowire="byType">

    <!--在hsf的配置文件中添加了dubbo的project.name,因为pom中引用了dubbo，dubbo的project.name为必须项-->
    <!--因为启用hsf时，会禁用dubbo配置文件，所以需要在这个额外添加dubbo的project.name信息-->
    <dubbo:application name="api-consumer"/>

    <!-- Annotation Scan -->
    <context:annotation-config/>
    <context:component-scan base-package="com.dubbo"/>

    <!-- 消费服务 -->
    <hsf:consumer id="apiService" interface="com.dubbo.api.service.ApiService"
        version="1.0.0" group="hsf">
    </hsf:consumer>
    
</beans>
